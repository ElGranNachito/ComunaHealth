@page
@model ComunaHealth.Pages.Identity.RegisterModel
@{
    <!--Contenedor-->
    <div class="container">

        <!--Form registro-->
        <form method="post">

            <div class="form-group">

                <label asp-for="Registro.Nombre"></label>
                <input type="text" class="form-text" asp-for="Registro.Nombre" />
            </div>

            <div class="form-group">

                <label asp-for="Registro.Apellido"></label>
                <input type="text" class="form-text" asp-for="Registro.Apellido" />
            </div>

            <div class="form-group">

                <div class="dropdown">

                    <script type="text/javascript">

                    </script>

                    <button class="dropdown-toggle btn-primary" type="button" data-toggle="dropdown" id="botonSeleccionTipoCuenta">
                        Paciente
                    </button>

                    <div class="dropdown-menu">
                        <button class="dropdown-item" type="button" onclick="SeleccionarItemDropdown(0, 'botonSeleccionTipoCuenta', 'textTipoCuentaSeleccionado');">
                            Paciente
                        </button>
                        <button class="dropdown-item" type="button" onclick="SeleccionarItemDropdown(1, 'botonSeleccionTipoCuenta', 'textTipoCuentaSeleccionado');">
                            Doctor
                        </button>
                    </div>

                    <input type="text" class="collapse" id="textTipoCuentaSeleccionado" asp-for="Registro.TipoCuenta" />

                </div>

            </div>

            <div class="form-group">

                <input type="submit" value="Registrarse" class="form-text" />
            </div>

        </form>

    </div>

    <script type="text/javascript" src="~/js/Utilidades.js"></script>
}
